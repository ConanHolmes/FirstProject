<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/weather_bg"
    tools:context=".WeatherFragment.WeatherFragment"
    android:background="@drawable/qing_bg">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/weather_cityname_edit"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:hint="输入城市名"
        android:textColor="#ffffff"
        android:background="@drawable/settings_tts_download_default"
        />
    <Button
        android:id="@+id/search_city"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="查看天气"
        android:background="@drawable/settings_tts_uploaded_item_b_share"
        />
    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            >

            <TextView
                android:id="@+id/weather_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_alignParentBottom="true"
                android:textSize="80sp"/>
            <ImageView
                android:id="@+id/weather_pic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_above="@id/weather_info"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/weather_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="50sp"
                android:layout_above="@id/weather_info"
                android:layout_toRightOf="@id/weather_pic"
                android:layout_marginLeft="35dp"/>
            <TextView
                android:id="@+id/weather_cityname"
                android:layout_margin="16dp"
                android:textSize="45sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/weather_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/weather_cityname"
                android:layout_marginLeft="16dp"
                android:textColor="#ffffff"
                android:textSize="30sp"/>


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/tomorrow_pic"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                    <TextView
                        android:id="@+id/tomorrow_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="30sp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tomorrow_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/tomorrow_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="45sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/houtian_pic"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <TextView
                        android:id="@+id/houtian_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="30sp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/houtian_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/houtian_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="45sp" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>



</android.support.v4.widget.NestedScrollView>
